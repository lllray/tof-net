
# LookAt -0.376 0.799 1.415 -0.238 0.991 1.092 0.188 0.262 0.236
Scale -1 1 1

Camera "perspective" 
       "float fov" 50

Film "image" 
        "integer xresolution" 320
        "integer yresolution" 240
        "string filename" "breakfast.exr"

Sampler "random" "integer pixelsamples" [512]

WorldBegin
Scale .2 .2 .2

AttributeBegin
    CoordSysTransform "camera"
    LightSource "point" "color I" [ 100 100 100 ]
AttributeEnd

